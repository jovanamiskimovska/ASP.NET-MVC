@model FeedbackViewModel

<h3>Edit feedback:</h3>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="custom-control-label"></label>
                <input type="text" asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                @*creates select list with options where value is the value of the members and text is the name of the member of the enum*@
                <select class="form-control" asp-for="Email" asp-items="Html.GetEnumSelectList<PaymentMethodEnum>()"></select>
            </div>
            <div class="form-group">
                <label asp-for="Message" class="control-label"></label>
                <input type="checkbox" asp-for="Message" class="form-control" />
            </div>
            <button type="submit" class="btn btn-default">Update</button>
        </form>
    </div>
</div>
